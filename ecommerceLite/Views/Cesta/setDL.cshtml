
@{
    ViewData["Title"] = "Despesa e Lucro";
}

<h3>Despesas Totais e Margem de Lucro</h3>

<div align="justify">
    <div class="form-group">
        <label class="control-label" for="despesas">Despesas totais</label>
        <input type="number" step="0.01" min="0" class="form-control" id="despesas" placeholder="400.00"><br />
    </div>
    <div class="form-group">
        <label class="control-label" for="margem">Margem de lucro</label>
        <input type="number" step="0.01" min="0" class="form-control" id="margem" placeholder="10" /><br />
        <a class="btn btn-primary" onclick="carrinho.PegaDespesaMargem() ">Adicionar</a>
    </div>
</div>


@section Scripts
    {

    <script src="~/js/carrinho.js">

    </script>

}