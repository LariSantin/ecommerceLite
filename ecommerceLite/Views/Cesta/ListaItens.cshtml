@{
    ViewData["Title"] = "ListaItens";
}
@model  IList<Produto>;


    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
   
    </head>
    <div class="container">
        <h3>Catálogo</h3>
        <div class="list-group">
            @foreach (var produto in Model)
            {
                <div class="list-group-item">
                    <div class="panel-body">
                        <div class="col-md-4">
                            <img class="img-responsive" src="/images/produtos/@(produto.Codigo).jpg" width="200" height="200" />

                        </div>
                        <div class="col-md-6">
                            <h3> @produto.Nome</h3>
                            <br />
                            @produto.Descricao
                        </div>
                        <div class="col-md-2">
                            <a asp-action="carrinho" asp-route-codigo="@produto.Codigo" class="btn btn-success">Adicionar</a>
                        </div>
                    </div>
                </div>



            }
        </div>
    </div>

    

